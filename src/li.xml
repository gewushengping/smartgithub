<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  >
    <TextView
        android:id="@+id/receiveTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize= "20sp"
        android:text="@string/hello_world" />
     <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiveTextView" 
        android:layout_marginRight="59dp"
        android:layout_marginTop="50dp"
        android:textSize= "15sp"
        android:text="连接" /> 
    <Button
        android:id="@+id/sendbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/connect"
        android:layout_below="@+id/connect"
        android:layout_marginTop="15dp"
        android:textSize= "15sp"
        android:text="发送" />
    <EditText
        android:id="@+id/sendeditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sendbutton"
        android:layout_below="@+id/sendbutton"
        android:layout_marginLeft="24dp"
        android:ems="10" />

    <Button
        android:id="@+id/devicemanagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sendbutton"
        android:layout_below="@+id/sendeditText"
        android:layout_marginTop="32dp"
        android:text="Button" />
    
    
</LinearLayout>